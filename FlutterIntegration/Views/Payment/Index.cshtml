@using FlutterIntegration.Models.ViewModel
@model FlutterViewModel

@{
    ViewData["Title"] = "Make Payments";
    var error = ViewData["error"] as string;

}
<div class="d-flex justify-content-center align-items-center">
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    <form class="d-flex w-50 p-5 box-shadow flex-column bg-light" method="post" 
    asp-controller="Payment" asp-action="Index">
        <div class="form-group">
            <label asp-for=Name class="control-label" ></label>
            <input asp-for=Name class="form-control" required/>
        </div>
         <div class="form-group">
            <label asp-for=Email class="control-label"></label>
            <input asp-for=Email class="form-control" required/>
        </div>
         <div class="form-group">
            <label asp-for=PhoneNumber class="control-label"></label>
            <input asp-for=PhoneNumber class="form-control" required/>
        </div>
         <div class="form-group">
            <label asp-for=Amount class="control-label"></label>
            <input asp-for=Amount class="form-control" required/>
        </div>
        <div>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>

</div>